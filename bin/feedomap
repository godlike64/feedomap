#!/usr/bin/python3
import sys
import os
import argparse

sys.path.insert(1, os.getcwd())

from feedomap.main import run
from feedomap.constants import PROGNAME, VERSION


def loglevel_validator(v):
    if v.upper() not in ["CRITICAL", "ERROR", "WARNING", "INFO", "DEBUG"]:
        raise argparse.ArgumentTypeError(
            "Log level must be a valid Python " + "log level. See -h for details."
        )
    else:
        return v.upper()


if __name__ == "__main__":
    parser = argparse.ArgumentParser(
        description=f"{PROGNAME} v{VERSION}: stores your feeds on your IMAP."
    )
    parser.add_argument(
        "-l",
        "--log-level",
        metavar="level",
        type=loglevel_validator,
        default="INFO",
        help=f"Define {PROGNAME}'s log level. Can be any of "
        "Python's standard log levels: CRITICAL, ERROR, "
        "WARNING, INFO, DEBUG.",
    )
    parser.add_argument(
        "-p",
        "--parallel",
        metavar="N",
        type=int,
        default=0,
        help="Use N threads when fetching feeds/" + "storing items.",
    )
    parser.add_argument(
        "-d",
        "--dry-run",
        action="store_true",
        help="Fetch feeds but do not load them into the IMAP server "
        "nor store them in the cache. Useful for debugging.",
    )
    args = parser.parse_args()
    run(args)
